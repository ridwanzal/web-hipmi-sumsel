		"dayjs-plugin-utc": "^0.1.2",
		"debug": "~2.6.9",
		"dotenv": "^16.0.3",
		"express": "^4.21.2",
		"express-mysql-session": "^3.0.3",
		"express-session": "^1.17.3",
		"formidable": "^2.1.1",
		"fs": "^0.0.1-security",
		"hbs": "^4.2.0",
		"http-errors": "~1.6.3",
		"install": "^0.13.0",
		"lodash": "^4.17.21",
		"marked": "^4.2.12",
		"morgan": "~1.9.1",
		"multer": "^1.4.5-lts.1",
		"mysql": "^2.18.1",
		"mysql2": "^3.14.1",
		"nodemon": "^3.1.10",
		"npm": "^11.3.0",
		"npm-check-updates": "^16.3.25",
		"sass": "^1.55.0",
		"sharp": "^0.34.3",
		"spdy": "^4.0.2"
	},
	"devDependencies": {
		"npm-run-all": "^4.1.5",
