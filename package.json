{
	"name": "express-hbars-rwz",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"start": "npm-run-all --parallel sass uglify serve",
		"serve": "nodemon ./bin/www",
		"sass": "sass --watch scss/style.scss --style compressed public/stylesheets/index.min.css",
		"uglify": "uglifyjs ./public/javascripts/base/a-jquery.min.js ./public/javascripts/base/b-popper.min.js ./public/javascripts/base/c-bootstrap.min.js ./public/javascripts/base/d-aos.min.js ./public/javascripts/base/e-swiper.min.js ./public/javascripts/base/f-match-height.min.js ./public/javascripts/base/g-lightbox.js  ./public/javascripts/main.js -o ./public/javascripts/bundle.min.js",
		"prod": "npm-run-all --parallel sass uglify prod-serve",
		"prod-serve": "pm2 ./bin/www --quiet",
		"debug": "npm-run-all --parallel sass debug-serve",
		"debug-serve": "nodemon --inspect ./bin/www"
	},
	"dependencies": {
		"bcrypt": "^5.1.0",
		"body-parser": "^1.20.1",
		"compression": "^1.7.4",
		"cookie-parser": "~1.4.4",
