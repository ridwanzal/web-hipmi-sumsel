{{> components/navigation}}

<section class="masthead__container">
   <div class="container">
      <div class="row">
         {{> components/breadcrumb breadcrumbs=breadcrumbs}}
         <div class="col col-6 col-md-8 mb-4">
            <h2 class="head__text--title" data-aos="fade">
               Our work
            </h2>
         </div>
      </div>
   </div>
   <div class="container-fluid">
      <div class="row mb-md-5">
         <div class="col col-12">
         <ul class="nav nav-pills mb-3 d-none" id="pills-tab" role="tablist">
            <li class="nav-item me-4" role="presentation">
               <button class="nav-link active bt orange" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home"
                  type="button" role="tab" aria-controls="pills-home" aria-selected="true">Home</button>
            </li>
            <li class="nav-item me-4" role="presentation">
               <button class="nav-link  bt orange" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile"
                  type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Profile</button>
            </li>
            <li class="nav-item" role="presentation">
               <button class="nav-link  bt orange" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact"
                  type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Kontak</button>
            </li>
         </ul>
         <div class="tab-content d-none" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">...</div>
            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">...</div>
            <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">...</div>
         </div>
         </div>
      </div>
      <div class="row mb-md-5 mb-2 pb-2 pb-md-5">
           {{#forback 26 1 1}}
               <div class="col col-12 col-md-2 mb-3 img-col">
                     <img data-src="/images/works/{{this}}.webp" alt="" class="rounded lazyload"/>
               </div>
           {{/forback}}
      </div>
   </div>
</section>
{{> components/footer}}