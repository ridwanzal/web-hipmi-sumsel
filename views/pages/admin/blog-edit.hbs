<section class="masthead__container">
   <div class="container">
      <div class="row">
         {{> components/breadcrumb breadcrumbs=breadcrumbs}}
      </div>
      <div class="row mb-md-5 mb-2 pb-2 pb-md-3">
         <div class="col col-12 col-md-6 col-xl-3 mb-1 mb-lg-3">
            {{> components/sidebar}}
         </div>
         <div class="col col-12 col-md-9">
            {{#success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
               Artikel berhasil disimpan.
               <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/success}}  
            <form class="ArtikelCMS" method="POST" action="/services/blog/edit/{{blog.id}}" enctype="multipart/form-data">
              <div class="card__border">
                  <h2 class="card__text fw-bold mb-4">Edit Artikel</h2>
                  <input type="hidden" name="author_id" value="{{blog.author_id}}" />

                  <div class="form-group mb-3">
                    <label for="thumbnail mb-lg-3 mb-2 d-block">Thumbnail (kosongkan jika tidak diubah)</label>
                    <input type="file" name="thumbnail" class="form-control mt-2" style="max-width: 240px;" />
                    <div class="mt-2">
                        <img loading="lazy" src="/uploads/{{blog.thumbnail}}" alt="Thumbnail Lama" style="max-width: 100px;border-radius:16px;" />
                    </div>
                  </div>

                  <div class="form-group mb-3">
                    <label for="title">Judul Artikel</label>
                    <input type="text" class="form-title-Artikel form-control js-article-title" name="title"
                        value="{{blog.title}}" required />
                  </div>

                  <div class="form-group mb-3">
                    <label for="slug">Slug</label>
                    <input type="text" name="slug" class="form-slug-Artikel form-control" value="{{blog.slug}}" readonly
                        required />
                  </div>

                  <div class="form-group mb-3">
                    <label for="content">Konten</label>
                    <textarea class="form-control" name="content" rows="8" required>{{blog.content}}</textarea>
                  </div>

                  <div class="form-group mb-3">
                    <label for="tag">Tag</label>
                    <input type="text" name="tag" class="form-control" value="{{blog.tag}}" required />
                    <small class="text-muted" style="font-size: 10px;">Contoh: Artikel Ilmiah, Berita Madinah, Makkah</small>
                  </div>

                  <div class="form-group mb-3">
                    <label for="uploader_name">Nama Uploader</label>
                    <input class="form-control" name="uploader_name" value="{{blog.uploader_name}}" required />
                  </div>

                  <button type="submit" class="btn btn-sm btn-primary">Perbarui Artikel</button>
              </div>
            </form>

         </div>
      </div>
   </div>
</section>