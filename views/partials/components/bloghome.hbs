<section class="section" style="background-color:#f8f9fa;">
    <div class="section__container mb-0 pb-0">
        <div class="container">
            <div class="row">
                <div class="col col-12 col-lg-12">
                    <div class="section__heading center">
                        <h2 class="head__text--title">
                            Berita & Artikel<br />
                        </h1>
                        <p class="content__text mb-lg-5 mb-2">
                            Info terbaru terkait Travel, Umrah, Haji, Pelaksanaan Ibadah, dan berita lainnya seputar Payung Madinah Nabawi.
                        </p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">    
              <div class="col col-12 col-lg-12">
                  <div class="row">
                    {{#limit blogs 9}}
                    <div class="col col-12 col-md-6 col-xl-3">
                        <div class="card card-post card-white mb-lg-4 mb-4 js-match-height">
                          <img width="100%" height="130" alt="Images" src="{{this.thumbnail}}"/>
                          <div class="card-body">
                              {{linkAnchor 'berita' this.slug this.title}}
                              <div class="content__text text-muted" style="color:#444 !important;font-size:.75rem;">Di posting oleh Admin</div>
                              <div>{{formatTanggalID this.date}}</div>
                          </div>
                        </div>
                    </div>
                    {{/limit}}
                  </div>
              </div>
            </div>
        </div>
    </div>
</section>